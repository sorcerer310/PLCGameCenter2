<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

	<display-name>androidpn-server</display-name>

	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<init-param>
			<param-name>forceEncoding</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	<filter>
		<filter-name>sitemesh</filter-name>
		<filter-class>com.opensymphony.module.sitemesh.filter.PageFilter</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>sitemesh</filter-name>
		<url-pattern>/*</url-pattern>
		<dispatcher>REQUEST</dispatcher>
		<dispatcher>FORWARD</dispatcher>
	</filter-mapping>

	<servlet>
		<servlet-name>helloservlet</servlet-name>
		<servlet-class>com.bsu.test.HelloServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>helloservlet</servlet-name>
		<url-pattern>/helloservlet</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>ugametime</servlet-name>
		<servlet-class>com.bsu.servlet.Server_Time_Query</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ugametime</servlet-name>
		<url-pattern>/ugametime</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>plc_receive_serial</servlet-name>
		<servlet-class>com.bsu.servlet.PLC_ReceiveSerial</servlet-class>
		<load-on-startup>5</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>plc_receive_serial</servlet-name>
		<url-pattern>/plc_receive_serial</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>plc_send_serial</servlet-name>
		<servlet-class>com.bsu.servlet.PLC_SendSerial</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>plc_send_serial</servlet-name>
		<url-pattern>/plc_send_serial</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>plc_test_commport</servlet-name>
		<servlet-class>com.bsu.servlet.PLC_TestCommPort</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>plc_test_commport</servlet-name>
		<url-pattern>/plc_test_commport</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>dispatcher</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>dispatcher</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>

	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>

	<welcome-file-list>
		<welcome-file>/index.html</welcome-file>
		<welcome-file>/index.jsp</welcome-file>
		<welcome-file>/index.do</welcome-file>
	</welcome-file-list>

	<error-page>
		<error-code>400</error-code>
		<location>/index.jsp</location>
	</error-page>
	<error-page>
		<error-code>403</error-code>
		<location>/403.jsp</location>
	</error-page>
	<error-page>
		<error-code>404</error-code>
		<location>/404.jsp</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/error.jsp</location>
	</error-page>

</web-app>
